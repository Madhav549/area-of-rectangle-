#include<stdio.h>
int main(){
int a;
  printf("Enter your income: ");
  scanf("%d", &a);
  
if(a<250000){
  printf("you need not to pay tax");
}
else if(a>250000 && a<500000){
  printf("you have to pay 5 percent tax that is : %d\n", (a*5)/100);
}
else if(a>500000 && a<1000000){
    printf("you have to pay 20 percent tax that is : %d\n", (a*20)/100);
  }
else (a>1000000);
    printf("you have to pay 30 percent tax that is : %d\n", (a*30)/100);
return 0;
}
